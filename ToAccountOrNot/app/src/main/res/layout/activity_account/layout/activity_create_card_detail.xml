<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/strut"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"/>

    <View
        android:id="@+id/depart1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/greyish" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="所在银行"
        android:gravity="center_vertical|left"
        android:textSize="22sp"
        android:paddingLeft="30dp"
        android:paddingStart="30dp"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:layout_below="@+id/depart1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignEnd="@+id/strut"
        android:layout_alignRight="@+id/strut"
        android:textColor="@color/colorPrimaryDark"
        android:background="@null"
        />

    <EditText
        android:id="@+id/bankname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right"
        android:layout_alignStart="@+id/strut"
        android:layout_alignLeft="@+id/strut"
        android:layout_toRightOf="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingEnd="30dp"
        android:paddingRight="30dp"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:textSize="22sp"
        android:background="@null"
        android:hint="(必填)"
        android:inputType="text"
        android:maxLines="1"
        android:maxLength="16"/>
    <View
        android:id="@+id/depart2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/greyish"
        android:layout_below="@+id/textView"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="卡号（后四位）"
        android:gravity="center_vertical|left"
        android:textSize="22sp"
        android:paddingLeft="30dp"
        android:paddingStart="30dp"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignEnd="@+id/strut"
        android:layout_alignRight="@+id/strut"
        android:textColor="@color/colorPrimaryDark"
        android:background="@null"
        />

    <EditText
        android:id="@+id/cardnumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right"
        android:layout_below="@+id/bankname"
        android:layout_alignStart="@+id/strut"
        android:layout_alignLeft="@+id/strut"
        android:layout_toRightOf="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingEnd="30dp"
        android:paddingRight="30dp"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:textSize="22sp"
        android:background="@null"
        android:hint="(选填)"
        android:inputType="number"
        android:maxLength="4"/>
    <View
        android:id="@+id/depart3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/greyish"
        android:layout_below="@+id/textView2"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="备注"
        android:gravity="center_vertical|left"
        android:textSize="22sp"
        android:paddingLeft="30dp"
        android:paddingStart="30dp"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignEnd="@+id/strut"
        android:layout_alignRight="@+id/strut"
        android:textColor="@color/colorPrimaryDark"
        android:background="@null"
        />

    <EditText
        android:id="@+id/remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:layout_below="@+id/cardnumber"
        android:layout_alignStart="@+id/strut"
        android:layout_alignLeft="@+id/strut"
        android:layout_toRightOf="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingEnd="30dp"
        android:paddingRight="30dp"
        android:textSize="22sp"
        android:background="@null"
        android:hint="(选填)"
        android:inputType="text"
        android:maxLines="1"
        android:maxLength="16"/>
    <View
        android:id="@+id/depart4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/greyish"
        android:layout_below="@+id/textView3"/>

    <com.deadline.statebutton.StateButton
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_below="@+id/depart4"
        android:text="保存"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:paddingLeft="100dp"
        android:paddingStart="100dp"
        android:paddingRight="100dp"
        android:paddingEnd="100dp"
        app:radius="10dp"
        app:normalTextColor="@color/white"
        app:normalBackgroundColor="@color/colorPrimary"/>
</RelativeLayout>
