<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"/>
    <com.deadline.statebutton.StateButton
        android:id="@+id/create_card"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:text="+  添加资产"
        android:textSize="20sp"
        android:textStyle="bold"

        app:normalTextColor="@color/colorPrimaryDark"
        app:pressedTextColor="@color/colorPrimaryDark"
        app:unableTextColor="@color/colorPrimaryDark" />
    <com.deadline.statebutton.StateButton
        android:id="@+id/delete_card"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:text="delete all(for test)"
        android:textSize="20sp"
        android:textStyle="bold"

        app:normalTextColor="@color/colorPrimaryDark"
        app:pressedTextColor="@color/colorPrimaryDark"
        app:unableTextColor="@color/colorPrimaryDark" />
    <com.deadline.statebutton.StateButton
        android:id="@+id/query_card"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:text="query(for test)"
        android:textSize="20sp"
        android:textStyle="bold"

        app:normalTextColor="@color/colorPrimaryDark"
        app:pressedTextColor="@color/colorPrimaryDark"
        app:unableTextColor="@color/colorPrimaryDark" />

</LinearLayout>