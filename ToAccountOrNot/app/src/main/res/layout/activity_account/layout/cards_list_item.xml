<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/ll_view"
        android:gravity="center"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/account_image"
            android:layout_centerVertical="true"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <TextView
            android:id="@+id/account_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_toRightOf="@+id/account_image"
            android:layout_toEndOf="@+id/account_image"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/account_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/account_card"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_toRightOf="@+id/account_image"
            android:layout_toEndOf="@+id/account_image"
            android:layout_marginTop="10dp"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/card_return"
            android:layout_centerVertical="true"
            android:gravity="end"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/account_sur"
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@+id/card_return"
            android:layout_toStartOf="@+id/card_return"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/account_in"
            android:layout_toLeftOf="@+id/card_return"
            android:layout_toStartOf="@+id/card_return"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/account_sur"
            android:layout_marginTop="10dp"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/account_out"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="end"
            android:layout_below="@+id/account_sur"
            android:layout_marginTop="10dp"
            android:paddingRight="10dp"
            android:layout_toStartOf="@+id/account_in"
            android:layout_toLeftOf="@+id/account_in"
            android:textSize="17sp"/>



    </RelativeLayout>
</RelativeLayout>