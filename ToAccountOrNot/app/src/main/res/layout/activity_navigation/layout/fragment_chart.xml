<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingTop="20sp"
                    android:paddingStart="24sp"
                    android:text="图表分析"
                    android:layout_centerInParent="true"
                    android:textColor="@android:color/white"
                    android:textSize="30sp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:paddingRight="10dp">

                    <TextView
                        android:id="@+id/lab_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="year"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/lab_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" - "
                        android:textColor="@android:color/white"
                        android:textSize="16sp"/>


                    <TextView
                        android:id="@+id/lab_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="month"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/lab_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" - "
                        android:textColor="@android:color/white"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/lab_weekORday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="week or day"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"/>


                </LinearLayout>


            </RelativeLayout>


        </androidx.appcompat.widget.Toolbar>


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:paddingTop="20dp">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/view_income"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:src="@drawable/piechart_income" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="收入" />

                <TextView
                    android:id="@+id/bottom_1"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="#A9A9A9" />


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/view_outcome"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:src="@drawable/piechart_outcome" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="支出" />

                <TextView
                    android:id="@+id/bottom_2"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="#A9A9A9" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/people"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:src="@drawable/people" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="成员" />

                <TextView
                    android:id="@+id/bottom_3"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="#A9A9A9" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#F5F5F5">

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:paddingTop="5dp"
            android:layout_weight="6">


            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pc"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/bc"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#F5F5F5">

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="5"
            android:layout_marginBottom="64dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="182dp"
                android:overScrollMode="never"

                />


        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/root_layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="64dp">


        <FrameLayout
            android:id="@+id/menu_layout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">

            <com.ogaclejapan.arclayout.ArcLayout
                android:id="@+id/arc_layout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="32dp"
                app:arc_axisRadius="@dimen/layout_child_offset_path"
                app:arc_freeAngle="false"
                app:arc_origin="bottom"
                app:arc_radius="@dimen/layout_radius_path">

                <Button
                    style="@style/Item.Path"
                    android:text="天"
                    android:background="@drawable/chart_bac"
                    />

                <Button
                    style="@style/Item.Path"
                    android:text="周"
                    android:background="@drawable/chart_bac"
                    />

                <Button
                    style="@style/Item.Path"
                    android:text="月"
                    android:background="@drawable/chart_bac"
                    />

                <Button
                    style="@style/Item.Path"
                    android:text="年"
                    android:background="@drawable/chart_bac"
                    />


            </com.ogaclejapan.arclayout.ArcLayout>

        </FrameLayout>

        <Button
            android:id="@+id/fab1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/chart_menu"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/left"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/left"
            android:layout_toLeftOf="@+id/fab1"
            android:layout_marginBottom="2dp"
            android:layout_alignParentBottom="true"/>

        <ImageView
            android:id="@+id/right"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/right"
            android:layout_toRightOf="@+id/fab1"
            android:layout_marginBottom="2dp"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>



</FrameLayout>