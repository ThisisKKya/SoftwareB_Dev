<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            />


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:paddingTop="20dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/view_income"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:src="@drawable/piechart_income" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="收入" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/view_outcome"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:src="@drawable/piechart_outcome" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="支出" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/people"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:src="@drawable/people" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="成员" />
            </LinearLayout>




        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:paddingTop="5dp"
            android:layout_weight="6">


            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pc"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/bc"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="5">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="182dp"
                android:overScrollMode="never" />


        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/root_layout1"
        android:layout_width="match_parent"
        android:layout_height="455dp">


        <FrameLayout
            android:id="@+id/menu_layout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/scrim"
            android:visibility="invisible">

            <com.ogaclejapan.arclayout.ArcLayout
                android:id="@+id/arc_layout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="32dp"
                app:arc_axisRadius="@dimen/layout_child_offset_path"
                app:arc_freeAngle="false"
                app:arc_origin="bottom"
                app:arc_radius="@dimen/layout_radius_path">

                <Button
                    style="@style/Item.Path"
                    android:text="天"
                    android:background="@drawable/chart_bac"
                    />

                <Button
                    style="@style/Item.Path"
                    android:text="周"
                    android:background="@drawable/chart_bac"
                    />

                <Button
                    style="@style/Item.Path"
                    android:text="月"
                    android:background="@drawable/chart_bac"
                    />

                <Button
                    style="@style/Item.Path"
                    android:text="年"
                    android:background="@drawable/chart_bac"
                    />

                <Button
                    style="@style/Item.Path"
                    android:background="@drawable/chart_add"

                    />

            </com.ogaclejapan.arclayout.ArcLayout>

        </FrameLayout>

        <Button
            android:id="@+id/fab1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:background="@drawable/chart_menu"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="24sp" />

    </RelativeLayout>



</FrameLayout>